<!doctype html>
<html lang="en">

<head>
  <title>{{title}}</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <header>
    <nav>
      <div class="logo-brandname">
        <img class="logo-nav" src="/images/2000px-Backpack_icon.png" alt="viaje-logo">
        <h1>Viaje</h1>
      </div>
      <div class="login-logout">
        {{#if currentUser}}
          <form action="/auth/logout" method="POST">
            <button>Log out</button>
          </form>
        {{else}}
          <a class="links" href="/">Signup</a>
          <span>or</span>
          <a class="links" href="/auth/login">Login</a>
        {{/if}}
      </div>
    </nav>
  </header>
  {{{body}}}
  <footer>
    footer
  </footer>
</body>
</html>
